<RootLayout>:
    GridLayout:
        cols:2
        rows:1
        Button:
            text:"Go to option 1"
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current="option1"
        Button:
            text:"Go to option 2"
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current="option2"

<OptionOne>:
    BoxLayout:
        Label:
            text:"Option 1"
        Button:
            text:"Go Back"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current="root"
<OptionTwo>:
    BoxLayout:
        Label:
            text:"Option 2"
        Button:
            text:"Go Back"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current="root"
