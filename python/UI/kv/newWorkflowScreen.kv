<NewWorkflow>
    GridLayout:
        cols:2
        rows:3
        padding: [10,10,10,10]
        spacing: 10
        minimum_size: (250,250)

        Label:
            size_hint:None,None
            size: 150,30
            text:"Workflow Name: "
        TextInput:
            size_hint:None,None
            size: 150,30
            text:""

        Label:
            size_hint:None,None
            size: 150,30
            text:"Workflow Description: "
        TextInput:
            size_hint:None,None
            size: 150,200
            text:""

        Button:
            size_hint:None,None
            size: 150,30
            text: "Create Workflow"
        Button:
            size_hint:None,None
            size: 150,30
            text: "Go Back"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current="root"
