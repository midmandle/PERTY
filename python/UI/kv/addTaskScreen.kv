<AddTask>
    GridLayout:
        cols:2
        rows:6
        padding: [10,10,10,10]
        spacing: 10
        minimum_size: (250,250)

        Label:
            size_hint:None,None
            size: 150,30
            text:"Task Name: "
        TextInput:
            size_hint:None,None
            size: 150,30
            text:""

        Label:
            size_hint:None,None
            size: 150,30
            text:"Optimistic Time: "
        TextInput:
            size_hint:None,None
            size: 150,30
            text:""


        Label:
            size_hint:None,None
            size: 150,30
            text:"Expected Time: "
        TextInput:
            size_hint:None,None
            size: 150,30
            text:""


        Label:
            size_hint:None,None
            size: 150,30
            text:"Pesimistic Time: "
        TextInput:
            size_hint:None,None
            size: 150,30
            text:""


        Label:
            size_hint:None,None
            size: 150,30
            text:"Weight: "
        TextInput:
            size_hint:None,None
            size: 150,30
            text:""

        Button:
            size_hint:None,None
            size: 150,30
            text: "Add Task"
        Button:
            size_hint:None,None
            size: 150,30
            text: "Go Back"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current="root"
